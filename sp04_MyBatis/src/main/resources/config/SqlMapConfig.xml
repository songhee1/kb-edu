<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource = "config/dbconn.properties"/>
	<typeAliases>
		<typeAlias type="mybatis.services.domain.User" alias = "user"/>
	</typeAliases>
	
	<environments default = "DEVELOPMENT">
		<environment id="DEVELOPMENT">
			<transactionManager type="JDBC"></transactionManager>
			<dataSource type="UNPOOLED">    <!-- DriverManager 방식  -->
				<property name="driver" value="${jdbc.oracle.driver}"/>
				<property name="url" value="${jdbc.oracle.url}"/>
				<property name="username" value="${jdbc.oracle.username}"/>
				<property name="password" value="${jdbc.oracle.password}"/>  <!--이 4개는 jdbc 정보 설정  -->
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<mapper resource = "mapper/mybatis-userservice-mapping.xml"></mapper>
	</mappers>
	
</configuration>